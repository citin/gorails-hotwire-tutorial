<%= turbo_frame_tag dom_id(post) do %>
  <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden my-4">
    <div class="p-6">
      <div id="<%= dom_id post %>" class="space-y-4">
        <div class="pb-4">
          <p class="mt-2 text-gray-600"><%= post.body %></p>
        </div>
        
        <div class="pb-4 flex items-center gap-4">
          <%= button_to post_likes_path(post), class: "rounded-md px-4 py-2 bg-blue-100 hover:bg-blue-200 transition-colors duration-200 text-blue-700 font-medium" do %>
            <span>Like (<%= post.likes || 0 %>)</span>
          <% end %>
        </div>

        <div class="pt-4 flex flex-col sm:flex-row gap-2">
          <%= link_to "Edit", edit_post_path(post), class: "text-center rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 transition-colors duration-200 text-gray-700 font-medium" %>
          <div class="sm:inline-block">
            <%= button_to "Destroy", post, method: :delete, class: "w-full sm:w-auto rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-500 transition-colors duration-200 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
