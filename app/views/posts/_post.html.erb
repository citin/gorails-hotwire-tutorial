<%= turbo_frame_tag post do %>
  <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden my-4">
    <div class="p-6">
      <div class="space-y-4">
        <div class="pb-4">
          <p class="mt-2 text-gray-600"><%= post.body %></p>
        </div>
        <div class="pb-4 flex items-center justify-between">
          <%= render 'posts/likes_count', post: post %>
          <% if post.author == Current.user %>
            <div class="flex gap-2">
              <%= link_to 'Edit', edit_post_path(post), class: 'text-center rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 transition-colors duration-200 text-gray-700 font-medium' %>
              <%= button_to "Destroy", post, method: :delete, class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-500 transition-colors duration-200 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          <% end %>
          <% if post.author != Current.user %>
            <p class="mt-2 text-sm text-gray-500">Posted by: <%= post.author.email_address %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
