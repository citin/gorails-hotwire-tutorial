<% if is_author %>
  <div class="flex gap-2 post-actions">
    <%= link_to 'Edit', [:edit, post.topic, post], id: "edit_#{dom_id(post)}", class: 'text-center rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 transition-colors duration-200 text-gray-700 font-medium' %>
    <%= button_to "Delete", [post.topic, post], method: :delete, 
    id: "delete_#{dom_id(post)}",
    class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-500 transition-colors duration-200 font-medium cursor-pointer",
    data: { turbo_confirm: "Are you sure?" } %>
  </div>
<% end %>
<% unless is_author %>
  <p class="mt-2 text-sm text-gray-500 post-author">
    Posted by: <%= post.author.email_address %>
  </p>
<% end %>
