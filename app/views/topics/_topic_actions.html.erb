<div class="flex space-x-3 mt-2">
  <%= link_to topic_path(topic), id: "show_#{dom_id(topic)}", class: "px-3 py-1.5 bg-blue-50 text-blue-600 hover:bg-blue-100 rounded-md flex items-center", data: { turbo_frame: '_top' } do %>
    View
  <% end %>
  <%= link_to topic_path(topic), id: "delete_#{dom_id(topic)}", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this topic?" }, class: "px-3 py-1.5 bg-red-50 text-red-600 hover:bg-red-100 rounded-md flex items-center" do %>
    Delete
  <% end %>
</div>
